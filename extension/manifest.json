{
    "name" : "Screen Sharing",
    "author": "OpenVidu",
    "version" : "1.0.0",
    "manifest_version" : 2,
    "minimum_chrome_version": "34",
    "description" : "Capture full-screen or specific application's screen",
    "homepage_url": "http://openvidu.io",
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "content_scripts": [ {
       "js": [ "script.js" ],
       "all_frames": true,
       "run_at": "document_end",
       "matches": ["https://*.openvidu.io/*"]
    }],
    "icons" : {
        "48" : "icon.png"
    },
    "permissions": [
        "desktopCapture"
    ],
    "web_accessible_resources": [
        "icon.png"
    ]
}
