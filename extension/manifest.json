{
    "name" : "OpenVidu ScreenSharing",
    "author": "OpenVidu",
    "version" : "1.0.1",
    "manifest_version" : 2,
    "minimum_chrome_version": "34",
    "description" : "Capture full-screen or specific application's screen",
    "homepage_url": "http://openvidu.io",
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "content_scripts": [ {
        "js": ["script.js"],
        "all_frames": true,
        "run_at": "document_end",
        "matches": ["https://*.openvidu.io/*", "https://openvidu.github.io/openvidu-screen-sharing-chrome-extension/*"]
    }],
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "permissions": [
        "desktopCapture"
    ],
    "web_accessible_resources": [
        "icon16.png",
        "icon48.png",
        "icon128.png"
    ]
}
